{
	"name": "turborepo-basic-shared",
	"version": "0.1.1",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"prisma:generate": "\"turbo run prisma:generate\"",
		"db-setup": "cd packages && cd prisma && npm run db-migrate",
		"db-studio": "cd packages && cd prisma && npm run db-studio",
		"docker:build": "docker-compose -f docker-compose.yml up --build",
		"dev:docker": "docker-compose -f docker-compose.yml up -d",
		"dev:setup": "npm run dev:docker && npm run db-setup & npm run db-studio",
		"dev": "concurrently \"npm run dev:docker\" \"turbo run dev --parallel\"",
		"dev:turbo": "\"turbo run dev --parallel\"",
		"dev:turbo:fe": "\"turbo run dev --parallel --scope=\"web\" --include-dependencies\"",
		"dev:seed": "cross-env DATABASE_URL=postgres://turboAf:getTurbo@localhost:5432/prisma?schema=prisma ts-node ./packages/prisma/seed.ts",
		"dev:deploy": "turbo run build && docker-compose -f docker-compose.deploy.yml up --build",
		"build": "turbo run build",
		"prod:build": "turbo run build --scope=\"api\" --scope=\"web\" --include-dependencies",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"test:e2e": "cd lib && cd e2e && npm run cypress:e2e",
		"clean": "turbo run clean && echo Removing top-level node_modules... && rm -rf node_modules && echo All clean!",
		"type-check": "turbo run type-check",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "5.16.2",
		"@testing-library/react": "12.1.3",
		"@testing-library/react-hooks": "7.0.2",
		"@testing-library/user-event": "13.5.0",
		"@types/jest": "27.4.0",
		"concurrently": "7.0.0",
		"esbuild": "0.14.23",
		"esbuild-jest": "0.5.0",
		"husky": "7.0.4",
		"jest": "27.5.1",
		"lint-staged": "12.3.4",
		"prettier": "2.5.1",
		"turbo": "latest"
	},
	"engines": {
		"npm": ">=8.0.0",
		"node": ">=16.0.0"
	},
	"packageManager": "npm@8.1.4",
	"dependencies": {
		"cross-env": "7.0.3"
	},
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"packages/ui/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"*.json": [
			"prettier --write"
		]
	}
}
